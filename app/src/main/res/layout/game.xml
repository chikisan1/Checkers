<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.chikaomaeda.android09.GameActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/board"
            layout="@layout/board"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"></include>


        <TableRow
            android:layout_height="84dp"
            android:layout_width="180dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:visibility="visible">

            <Button
                android:id="@+id/resign_button"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginEnd="60dp"
                android:text="@string/resign" />

            <Button
                android:id="@+id/draw_button"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="@string/draw" />
        </TableRow>

        <TableRow
            android:layout_height="84dp"
            android:layout_width="180dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp">

            <Button
                android:id="@+id/ai_button"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginEnd="60dp"
                android:text="@string/ai" />

            <Button
                android:id="@+id/undo_button"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="@string/undo" />

        </TableRow>

        <TableRow
            android:layout_width="180dp"
            android:layout_height="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/turnView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:layout_column="1"
                android:textColor="@color/trueBlack"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</LinearLayout>
